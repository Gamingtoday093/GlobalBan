<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0;net461</TargetFramework>
    <PackageLicenseExpression>EUPL-1.2</PackageLicenseExpression>
	<PackageTags>openmod openmod-plugin universal</PackageTags>
	<RootNamespace>MyOpenModPlugin</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateNugetPackage>true</GenerateNugetPackage>
    <Product>Global Ban</Product>
    <Version>3.0.0</Version>
    <Authors>Pustalorc</Authors>
    <Copyright>Copyright © 2020 Pustalorc</Copyright>
    <Description>Manages bans through OpenMod globally with MySql</Description>
    <PackageProjectUrl>https://github.com/Pustalorc/GlobalBan</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Pustalorc/GlobalBan</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageReleaseNotes>First release onto OpenMod</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenMod.Core" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="config.yaml" />
    <EmbeddedResource Include="translations.yaml" />
  </ItemGroup>

</Project>